<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">

    <!--
    ============================================================================
    ===== UFO_DUM_DUM - just a dummy frame to hold shared SEC-ENV bullshit
    ============================================================================
    -->

    <Frame name="UFO_DUM_DUM" inherits="SecureFrameTemplate" mixin="GLOBAL_UFO_MIXIN_FOR_UfoMixin" hidden="true">
    </Frame>

    <!--
    ============================================================================
    ===== Germ - the button on the action bars that controls the flyouts
    ============================================================================
    -->

    <Button name="GermTemplate"
        virtual="true"
        inherits="
            ActionButtonTemplate,
            SecureActionButtonTemplate
        "
        mixin="
            GLOBAL_Button_Mixin,
            GLOBAL_Germ
        "
    />
    <!--inheritance tree
        ActionButtonTemplate              :: mixin = BaseActionButtonMixin
            + ActionButtonSpellFXTemplate :: mixin = none
            + FlyoutButtonTemplate        :: mixin = FlyoutButtonMixin
        SecureActionButtonTemplate        :: mixin = SecureActionButtonMixin
            + SecureFrameTemplate         :: mixin = none

            BaseActionButtonMixin <- FlyoutButtonMixin <- ButtonStateBehaviorMixin
    -->

    <!--
    ============================================================================
    ===== PADDED bumper around the SecEnv action BUTTON on the FlyoutMenu
    ===== It must be "secure" otherwise SetFrameRef() won't accept it and thus the SecEnv code can't access it in order to anchor to it
    ============================================================================
    -->

    <CheckButton name="UFO_BumperForBOFM_Template"
       virtual="true"
       inherits="SecureActionButtonTemplate"
       frameStrata="LOW"
       frameLevel="1"
       toplevel="true"
    >
        <Size x="38" y="38"/> <!-- size of the wrapped button (30) plus 4 on each side -->
    </CheckButton>

    <!--
    ============================================================================
    ===== SecEnv action BUTTON on the FlyoutMenu
    ============================================================================
    -->

    <CheckButton name="UFO_ButtonOnFlyoutMenu_Template"
            virtual="true"
            inherits="
                SpellFlyoutPopupButtonTemplate,
                SecureActionButtonTemplate
            "
            mixin="
                GLOBAL_ButtonOnFlyoutMenu,
                GLOBAL_Button_Mixin
            "
    >
    <!--inheritance tree
        SpellFlyoutPopupButtonTemplate            :: mixin = SpellFlyoutPopupButtonMixin
            + SmallActionButtonTemplate           :: mixin = SmallActionButtonMixin
                + ActionButtonTemplate            :: mixin = BaseActionButtonMixin
                    + ActionButtonSpellFXTemplate :: mixin = none
                    + FlyoutButtonTemplate        :: mixin = FlyoutButtonMixin
            + FlyoutPopupButtonTemplate           :: mixin = FlyoutPopupButtonMixin
            + SecureFrameTemplate                 :: mixin = none
        SecureActionButtonTemplate                :: mixin = SecureActionButtonMixin
            + SecureFrameTemplate                 :: mixin = none

            BaseActionButtonMixin <- FlyoutButtonMixin <- ButtonStateBehaviorMixin
    -->
        <Frames>
            <CheckButton parentKey="bumper" name="$parent_Bumper" inherits="UFO_BumperForBOFM_Template" id="99"/>
        </Frames>
        <Scripts>
            <OnLoad  method="onLoad" />
            <OnEnter method="onEnter" />
            <OnLeave method="onLeave" />
            <OnMouseUp method="onMouseUp" />
            <OnMouseDown method="OnMouseDown" />
            <OnDragStart method="onDragStartDoPickup" />
            <OnReceiveDrag method="onReceiveDrag" />
            <PreClick>
                self:SetChecked(false)
            </PreClick>
        </Scripts>
        <NormalTexture/>
    </CheckButton>

