    <CheckButton name="UIUFO_FlyoutBtnTemplate" virtual="TRUE" inherits="SmallActionButtonTemplate, SecureActionButtonTemplate">
        <Scripts>
            <OnLoad>
                self:SmallActionButtonMixin_OnLoad()
                self.PushedTexture:SetSize(31.6, 30.9)
                self:RegisterForDrag("LeftButton")
                _G[self:GetName().."Count"]:SetPoint("BOTTOMRIGHT", 0, 0)
                self.maxDisplayCount = 99
                self:RegisterForClicks("LeftButtonDown", "LeftButtonUp")
            </OnLoad>
            <OnEnter function="GLOBAL_UIUFO_FlyoutBtn_SetTooltip" />
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
            <OnDragStart function="GLOBAL_UIUFO_FlyoutBtn_OnDragStart" />
            <OnReceiveDrag function="GLOBAL_UIUFO_FlyoutBtn_OnReceiveDrag" />
            <OnMouseUp function="GLOBAL_UIUFO_FlyoutBtn_OnReceiveDrag" />
            <PreClick>
                self:SetChecked(false)
            </PreClick>
        </Scripts>
        <NormalTexture/>
    </CheckButton>

